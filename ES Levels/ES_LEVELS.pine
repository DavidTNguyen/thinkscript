//@version=6
indicator("ES Levels - Jan 7", overlay=true, max_lines_count=500, max_labels_count=500)

// === ES Plan - Clean Execution Focus (Level-to-Level) ===
// BIG PICTURE OVERVIEW
//
// CONTEXT:
// - Constructively bullish while ES holds above 6940-35.
// - Below that zone, upside edge degrades quickly.
//
// PLAN:
// - ðŸ‚ish: Above 6940 = Long bias. Dip buy 6945-40. Add > 6960.
// - Inflection: 6970-75 = Profit zone. Tighten stops.
// - ðŸ»ish: Below 6935 = Flip defensive. Target 6925 -> 6910.
//
// TACTICS: Best trades = Failed breakdowns & Reclaims. Avoid mid-range chop.
// NOTE: We don't predict - we REACT and follow price level to level.

// === TARGETS / INFLECTION ===
level1 = input.float(6980, "Extension Target: 6980", group="Targets")
level1_thickness = input.int(1, "Line Weight", minval=1, maxval=5, group="Targets")
level2 = input.float(6975, "Inflection Upper: 6975", group="Targets")
level2_thickness = input.int(2, "Line Weight", minval=1, maxval=5, group="Targets")
level3 = input.float(6970, "Inflection Lower: 6970", group="Targets")
level3_thickness = input.int(2, "Line Weight", minval=1, maxval=5, group="Targets")

// === MOMENTUM / RESISTANCE ===
level4 = input.float(6960, "Momo Add Trigger: 6960", group="Resistance")
level4_thickness = input.int(1, "Line Weight", minval=1, maxval=5, group="Resistance")
level5 = input.float(6955, "Near-term Res: 6955", group="Resistance")
level5_thickness = input.int(1, "Line Weight", minval=1, maxval=5, group="Resistance")
level6 = input.float(6945, "Bull Control: 6945", group="Resistance")
level6_thickness = input.int(1, "Line Weight", minval=1, maxval=5, group="Resistance")

// === SUPPORT LEVELS ===
level7 = input.float(6940, "Delta Support: 6940", group="Support")
level7_thickness = input.int(2, "Line Weight", minval=1, maxval=5, group="Support")
level8 = input.float(6935, "Struct Failure: 6935", group="Support")
level8_thickness = input.int(3, "Line Weight", minval=1, maxval=5, group="Support")
level9 = input.float(6925, "Last Dip-Buy: 6925", group="Support")
level9_thickness = input.int(2, "Line Weight", minval=1, maxval=5, group="Support")

// === LOWER SUPPORT ===
level10 = input.float(6910, "Lower Support: 6910", group="Lower")
level10_thickness = input.int(2, "Line Weight", minval=1, maxval=5, group="Lower")
level11 = input.float(0, "Unused", group="Lower")
level11_thickness = input.int(1, "Line Weight", minval=1, maxval=5, group="Lower")

// Alert Settings
enableAlerts = input.bool(true, "Enable Alerts", group="Alert Settings")
alertSensitivity = input.float(0.5, "Alert Sensitivity (pts)", minval=0.1, maxval=5.0, group="Alert Settings")
showLabels = input.bool(true, "Show Price Labels", group="Display Settings")
showTable = input.bool(fase, "Show Status Table", group="Display Settings")

// === Plot Levels ===
plot(level1, "6980 Ext", #FF00FF, level1_thickness, style=plot.style_line, trackprice=false)
plot(level2, "6975 Inflect", #FF00FF, level2_thickness, trackprice=false)
plot(level3, "6970 Inflect", #FF00FF, level3_thickness, trackprice=false)
plot(level4, "6960 Momo", #FFA500, level4_thickness, trackprice=false)
plot(level5, "6955 Res", #FFA500, level5_thickness, trackprice=false)
plot(level6, "6945 Bull Ctrl", #00FFFF, level6_thickness, trackprice=false)
plot(level7, "6940 Delta", #00FFFF, level7_thickness, trackprice=false)
plot(level8, "6935 FAIL", #FFFF00, level8_thickness, trackprice=false)
plot(level9, "6925 Dip Buy", #FFFF00, level9_thickness, trackprice=false)
plot(level10, "6910 Supp", #FF0000, level10_thickness, trackprice=false)
plot(level11 > 0 ? level11 : na, "L11", #808080, level11_thickness, trackprice=false)

// === Labels on Last Bar ===
if barstate.islast and showLabels
    var label lbl1 = na
    var label lbl2 = na
    var label lbl3 = na
    var label lbl4 = na
    var label lbl5 = na
    var label lbl6 = na
    var label lbl7 = na
    var label lbl8 = na
    var label lbl9 = na
    var label lbl10 = na
    var label lbl11 = na
    
    label.delete(lbl1)
    label.delete(lbl2)
    label.delete(lbl3)
    label.delete(lbl4)
    label.delete(lbl5)
    label.delete(lbl6)
    label.delete(lbl7)
    label.delete(lbl8)
    label.delete(lbl9)
    label.delete(lbl10)
    label.delete(lbl11)
    
    lbl1 := label.new(bar_index + 5, level1, "80 Ext", xloc=xloc.bar_index, yloc=yloc.price, color=color.new(#FF00FF, 80), textcolor=#FF00FF, style=label.style_label_left, size=size.small)
    lbl2 := label.new(bar_index + 5, level2, "75 Inflect", xloc=xloc.bar_index, yloc=yloc.price, color=color.new(#FF00FF, 80), textcolor=#FF00FF, style=label.style_label_left, size=size.small)
    lbl3 := label.new(bar_index + 5, level3, "70 Inflect", xloc=xloc.bar_index, yloc=yloc.price, color=color.new(#FF00FF, 80), textcolor=#FF00FF, style=label.style_label_left, size=size.small)
    lbl4 := label.new(bar_index + 5, level4, "60 Momo", xloc=xloc.bar_index, yloc=yloc.price, color=color.new(#FFA500, 80), textcolor=#FFA500, style=label.style_label_left, size=size.small)
    lbl5 := label.new(bar_index + 5, level5, "55 Res", xloc=xloc.bar_index, yloc=yloc.price, color=color.new(#FFA500, 80), textcolor=#FFA500, style=label.style_label_left, size=size.small)
    lbl6 := label.new(bar_index + 5, level6, "45 ðŸ‚ Ctrl", xloc=xloc.bar_index, yloc=yloc.price, color=color.new(#00FFFF, 80), textcolor=#00FFFF, style=label.style_label_left, size=size.small)
    lbl7 := label.new(bar_index + 5, level7, "40 Delta", xloc=xloc.bar_index, yloc=yloc.price, color=color.new(#00FFFF, 80), textcolor=#00FFFF, style=label.style_label_left, size=size.small)
    lbl8 := label.new(bar_index + 5, level8, "35 FAIL", xloc=xloc.bar_index, yloc=yloc.price, color=color.new(#FFFF00, 80), textcolor=#FFFF00, style=label.style_label_left, size=size.small)
    lbl9 := label.new(bar_index + 5, level9, "25 Dip Buy", xloc=xloc.bar_index, yloc=yloc.price, color=color.new(#FFFF00, 80), textcolor=#FFFF00, style=label.style_label_left, size=size.small)
    lbl10 := label.new(bar_index + 5, level10, "10 Supp", xloc=xloc.bar_index, yloc=yloc.price, color=color.new(#FF0000, 80), textcolor=#FF0000, style=label.style_label_left, size=size.small)
    lbl11 := level11 > 0 ? label.new(bar_index + 5, level11, "L11", xloc=xloc.bar_index, yloc=yloc.price, color=color.new(#808080, 80), textcolor=#808080, style=label.style_label_left, size=size.small) : na

// === Alert Conditions ===
// Extension Target
alertcondition(ta.crossover(close, level1), "ES >> 6980", "ES >> 6980 - Extension!")
alertcondition(ta.crossunder(close, level1), "ES << 6980", "ES << 6980")

// Inflection Zone
alertcondition(ta.crossover(close, level2), "ES >> 6975", "ES >> 6975 - PROFIT ZONE")
alertcondition(ta.crossunder(close, level2), "ES << 6975", "ES << 6975")
alertcondition(ta.crossover(close, level3), "ES >> 6970", "ES >> 6970 - Inflection")
alertcondition(ta.crossunder(close, level3), "ES << 6970", "ES << 6970")

// Momentum Add
alertcondition(ta.crossover(close, level4), "ES >> 6960", "ES >> 6960 - MOMO ADD")
alertcondition(ta.crossunder(close, level4), "ES << 6960", "ES << 6960")

// Resistance
alertcondition(ta.crossover(close, level5), "ES >> 6955", "ES >> 6955 - Res Break")
alertcondition(ta.crossunder(close, level5), "ES << 6955", "ES << 6955")

// Bull Control
alertcondition(ta.crossover(close, level6), "ES >> 6945", "ES >> 6945 - Bull Ctrl")
alertcondition(ta.crossunder(close, level6), "ES << 6945", "ES << 6945")

// Delta Support
alertcondition(ta.crossover(close, level7), "ES >> 6940", "ES >> 6940 - Reclaim!")
alertcondition(ta.crossunder(close, level7), "ES << 6940", "ES << 6940 - Delta Fail?")

// Structural Failure
alertcondition(ta.crossover(close, level8), "ES >> 6935", "ES >> 6935 - Reclaim")
alertcondition(ta.crossunder(close, level8), "ES << 6935", "ES << 6935 - STRUCT FAIL!")

// Last Dip-Buy
alertcondition(ta.crossover(close, level9), "ES >> 6925", "ES >> 6925")
alertcondition(ta.crossunder(close, level9), "ES << 6925", "ES << 6925 - Last Dip")

// Lower Support
alertcondition(ta.crossover(close, level10), "ES >> 6910", "ES >> 6910")
alertcondition(ta.crossunder(close, level10), "ES << 6910", "ES << 6910 - Selloff")

// === Market Structure Status Table ===
var table statusTable = table.new(position.top_right, 2, 10, border_width=1)

if barstate.islast and showTable
    table.cell(statusTable, 0, 0, "ES - Jan 7", text_color=color.white, bgcolor=color.new(color.blue, 50))
    table.cell(statusTable, 1, 0, "Level-to-Level", text_color=color.lime, bgcolor=color.new(color.blue, 50))
    
    table.cell(statusTable, 0, 1, "Now", text_color=color.white, bgcolor=color.new(color.gray, 50))
    table.cell(statusTable, 1, 1, str.tostring(close, "#.00"), text_color=color.aqua, bgcolor=color.new(color.gray, 50))
    
    // Position Status
    posStatus = close >= level2 ? "PROFIT ZONE" : close >= level4 ? "MOMO ZONE" : close >= level7 ? "LONG BIAS" : close >= level8 ? "CAUTION" : "DEFENSIVE"
    posColor = close >= level2 ? color.fuchsia : close >= level4 ? color.orange : close >= level7 ? color.aqua : close >= level8 ? color.yellow : color.red
    
    table.cell(statusTable, 0, 2, "Position", text_color=color.white, bgcolor=color.new(color.gray, 50))
    table.cell(statusTable, 1, 2, posStatus, text_color=posColor, bgcolor=color.new(color.gray, 50))
    
    // Trade Plan
    tradePlan = close >= level3 ? "PROTECT: 6970-75" : close >= level4 ? "T: 6970-75" : close >= level7 ? "DIP BUY 45-40" : close >= level8 ? "HOLD 6935" : "T: 6925->6910"
    planColor = close >= level3 ? color.fuchsia : close >= level4 ? color.orange : close >= level7 ? color.aqua : close >= level8 ? color.yellow : color.red
    
    table.cell(statusTable, 0, 3, "Plan", text_color=color.white, bgcolor=color.new(color.gray, 50))
    table.cell(statusTable, 1, 3, tradePlan, text_color=planColor, bgcolor=color.new(color.gray, 50))
    
    // Key Concepts
    table.cell(statusTable, 0, 4, "Bias", text_color=color.white, bgcolor=color.new(color.gray, 50))
    table.cell(statusTable, 1, 4, ">6940 = Long", text_color=color.lime, bgcolor=color.new(color.gray, 50))
    
    table.cell(statusTable, 0, 5, "Fail", text_color=color.white, bgcolor=color.new(color.gray, 50))
    table.cell(statusTable, 1, 5, "<6935 Defensive", text_color=color.red, bgcolor=color.new(color.gray, 50))
    
    // Key Levels
    table.cell(statusTable, 0, 6, "Inflection", text_color=color.white, bgcolor=color.new(color.gray, 50))
    table.cell(statusTable, 1, 6, "6970-75", text_color=color.fuchsia, bgcolor=color.new(color.gray, 50))
    
    table.cell(statusTable, 0, 7, "Support", text_color=color.white, bgcolor=color.new(color.gray, 50))
    table.cell(statusTable, 1, 7, "6945-40, 6935", text_color=color.aqua, bgcolor=color.new(color.gray, 50))
    
    // Distance to key level
    if close < level3
        dist3 = level3 - close
        table.cell(statusTable, 0, 8, "->6970", text_color=color.white, bgcolor=color.new(color.gray, 50))
        table.cell(statusTable, 1, 8, str.tostring(dist3, "#.0") + " pts", text_color=color.fuchsia, bgcolor=color.new(color.gray, 50))
    else
        dist1 = level1 - close
        table.cell(statusTable, 0, 8, "->6980 Ext", text_color=color.white, bgcolor=color.new(color.gray, 50))
        table.cell(statusTable, 1, 8, str.tostring(dist1, "#.0") + " pts", text_color=color.fuchsia, bgcolor=color.new(color.gray, 50))
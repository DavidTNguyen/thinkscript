# === KEY LEVELS ===
input level1 = 7027;  # ATH Breakout Target
input level1_thickness = 1;
input level2 = 6999;  # Major Res / 7k Area
input level2_thickness = 2;
input level3 = 6989;  # Upper Res
input level3_thickness = 1;

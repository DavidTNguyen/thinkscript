Alert(enableAlerts and close crosses below level4, "ES << 6964", Alert.BAR, Sound.Bell);
Alert(enableAlerts and atLevel4, "ES @ 6964", Alert.BAR, Sound.Chimes);

# LEVEL 5 - Target 1 HIT
Alert(enableAlerts and close crosses above level5, "ES >> 6959", Alert.BAR, Sound.Ring);
Alert(enableAlerts and close crosses below level5, "ES << 6959", Alert.BAR, Sound.Bell);
Alert(enableAlerts and atLevel5, "ES @ 6959", Alert.BAR, Sound.Chimes);

# LEVEL 6 - Reclaim Trigger
Alert(enableAlerts and close crosses above level6, "ES >> 6950 - RECLAIM!", Alert.BAR, Sound.Ring);
Alert(enableAlerts and close crosses below level6, "ES << 6950", Alert.BAR, Sound.Bell);
Alert(enableAlerts and atLevel6, "ES @ 6950", Alert.BAR, Sound.Chimes);

# LEVEL 7 - Support
Alert(enableAlerts and close crosses above level7, "ES >> 6948", Alert.BAR, Sound.Ring);
Alert(enableAlerts and close crosses below level7, "ES << 6948 - Supp Lost", Alert.BAR, Sound.Bell);
Alert(enableAlerts and atLevel7, "ES @ 6948", Alert.BAR, Sound.Chimes);

# LEVEL 8 - Fail Level
Alert(enableAlerts and close crosses above level8, "ES >> 6940 - Reclaim", Alert.BAR, Sound.Ring);
